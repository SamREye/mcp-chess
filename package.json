{
  "name": "mcp-chess",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.29.2",
  "scripts": {
    "dev": "NEXT_DIST_DIR=.next-dev next dev",
    "dev:fresh": "rm -rf .next-dev && NEXT_DIST_DIR=.next-dev next dev",
    "build": "pnpm run prisma:generate && NEXT_DIST_DIR=.next-build next build",
    "start": "pnpm run db:init && NEXT_DIST_DIR=.next-build next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "DATABASE_URL=${DATABASE_URL:-file:./dev.db} prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "db:init": "node scripts/db.mjs init",
    "db:reset": "node scripts/db.mjs reset"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.3.1",
    "ably": "^2.17.1",
    "chess.js": "^1.2.0",
    "next": "^14.2.5",
    "next-auth": "^4.24.7",
    "nodemailer": "^7.0.13",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/nodemailer": "^7.0.9",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "prisma": "^6.3.1",
    "typescript": "^5.7.3"
  }
}
